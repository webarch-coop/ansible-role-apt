# {{ ansible_managed }}
{% if apt_distro == 'stretch'  or apt_distro == 'buster' %}
deb https://deb.debian.org/debian {{ apt_distro }} main
deb https://deb.debian.org/debian {{ apt_distro }}-updates main
deb https://deb.debian.org/debian-security {{ apt_distro }}/updates main
{% if apt_backports == 'True' %}
deb https://deb.debian.org/debian {{ apt_distro }}-backports main
{% endif %}
{% if apt_src == 'True' %}
deb-src https://deb.debian.org/debian stretch main
deb-src https://deb.debian.org/debian-security stretch/updates main
deb-src https://deb.debian.org/debian stretch-updates main
{% endif %} 
{% elif apt_distro == 'jessie' or apt_distro == 'wheezy' %}
deb http://ftp.uk.debian.org/debian/ {{ apt_distro }} main
deb http://ftp.uk.debian.org/debian/ {{ apt_distro }}-updates main
deb http://security.debian.org/ {{ apt_distro }}/updates main
deb http://ftp.uk.debian.org/debian/ {{ apt_distro }}-backports main
{% endif %}
