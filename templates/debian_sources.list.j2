# {{ ansible_managed }}
{% if apt_distro == 'buster' or apt_distro == 'stretch' %}
# Debian {{ apt_distro }} repos
deb https://deb.debian.org/debian {{ apt_distro }} {% for comp in apt_debian_components %}{{ comp }} {% endfor %}

deb https://deb.debian.org/debian-security {{ apt_distro }}/updates {% for comp in apt_debian_components %}{{ comp }} {% endfor %}

{% if apt_backports == True %}
deb https://deb.debian.org/debian {{ apt_distro }}-backports main
{% endif %}
{% if apt_src == True %}
# Debian {{ apt_distro }} source repos
deb-src https://deb.debian.org/debian {{ apt_distro }} {% for comp in apt_debian_components %}{{ comp }} {% endfor %}

deb-src https://deb.debian.org/debian-security {{ apt_distro }}/updates {% for comp in apt_debian_components %}{{ comp }} {% endfor %}

{% if apt_backports == True %}
deb-src https://deb.debian.org/debian {{ apt_distro }}-backports main
{% endif %}
{% endif %}
{% elif apt_distro == 'jessie' %}
# Debian Jessie repos
deb http://deb.debian.org/debian jessie {% for comp in apt_debian_components %}{{ comp }} {% endfor %}

deb http://security.debian.org/ jessie/updates {% for comp in apt_debian_components %}{{ comp }} {% endfor %}

